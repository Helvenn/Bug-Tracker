<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
   
      <property name="hibernate.dialect">
      	org.hibernate.dialect.PostgreSQLDialect
      </property>
      
      <property name="hibernate.connection.driver_class">
      	org.postgresql.Driver
      </property>
      
      <property name="hibernate.connection.username">
      	postgres
      </property>
      
      <property name="hibernate.connection.password">
      	postgres
      </property>
      
      <property name="hibernate.connection.url">
      	jdbc:postgresql://localhost:5432/BugTracker
      </property>
      
      
      <property name="connection_pool_size">1</property>

      <property name="hbm2ddl.auto">update</property>

      <property name="show_sql">true</property>
      
      
      <!-- List of XML mapping files -->
      <mapping class = "tracker.model.AppUser" />
      <mapping class = "tracker.model.Bug" />
      <mapping class = "tracker.model.BugProject" />
      <mapping class = "tracker.model.Category" />
      <mapping class = "tracker.model.Image" />
      <mapping class = "tracker.model.Project" />
      <mapping class = "tracker.model.Role" />
      <mapping class = "tracker.model.Severity" />
      <mapping class = "tracker.model.State" />
      <mapping class = "tracker.model.UserProject" />
      <mapping class = "tracker.model.UserResolvingBug" />
      
   </session-factory>
</hibernate-configuration>